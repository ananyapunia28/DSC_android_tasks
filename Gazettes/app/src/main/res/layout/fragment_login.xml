<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainFragment"
    >
    <data>

        <variable
            name="logindetails"
            type="com.example.gazettes.viewmodels.LoginViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/doimg">
        <ImageView
            android:id="@+id/border"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/login"
            android:layout_centerHorizontal="true"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="Gazettes"
            android:textSize="50sp"
            android:textColor="#4169E1"
            android:layout_marginTop="160dp"
            android:textStyle="bold"
            android:id="@+id/apname"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:cardCornerRadius="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="12dp"
            app:cardElevation="15dp"
            android:layout_below="@id/apname">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="0dp">

            <EditText
                android:id="@+id/emailEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textEmailAddress"
                android:hint="Email-Id"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/login"
            app:passwordToggleEnabled="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login1"
            android:layout_marginTop="8dp">

            <EditText
                android:id="@+id/pswrdEt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:inputType="textPassword"
                android:hint="Password"/>

        </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/loginBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/login"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="20dp"
                    android:backgroundTint="@color/blue"
                    android:onClick="@{logindetails.onloginBtnClick}"
                    android:text="Login"
                    android:textSize="18sp"/>

                <Button
            android:id="@+id/noAccountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loginBtn"
                    android:backgroundTint="@color/blue"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp"
                    android:background="@color/blue"
                    android:layout_marginBottom="8dp"
            android:textSize="18sp"
            android:text="Sign Up" />
    </RelativeLayout>
    </androidx.cardview.widget.CardView>


    </RelativeLayout>

</layout>